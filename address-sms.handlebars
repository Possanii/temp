<div style="max-width:480px;margin:40px auto;padding:24px;border:1px solid #eee;border-radius:8px;background:#fafafa;">
  <h2 style="color:#F45E43;margin-top:0;">Address Integration Test</h2>
  <hr>
  {{#if postOfficeBox}}
    <div><strong>Post Office Box:</strong> {{postOfficeBox}}</div>
  {{/if}}
  {{#if extendedAddress}}
    <div><strong>Extended Address:</strong> {{extendedAddress}}</div>
  {{/if}}
  {{#if streetAddress}}
    <div><strong>Street Address:</strong> {{streetAddress}}</div>
  {{/if}}
  <div><strong>Locality (City):</strong> {{locality}}</div>
  <div><strong>Region (State/Province):</strong> {{region}}</div>
  {{#if postalCode}}
    <div><strong>Postal Code:</strong> {{postalCode}}</div>
  {{/if}}
  <div><strong>Country Name:</strong> {{countryName}}</div>
  <div style="color:#777;font-size:12px;margin-top:18px;">
    <em>Required fields: locality, region, countryName</em>
  </div>
</div>
